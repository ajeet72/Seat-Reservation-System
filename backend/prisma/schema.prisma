generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model seat {
  id          String   @id @default(uuid())
  row_number  Int
  seat_number Int
  is_booked   Boolean  @default(false)
}